<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="#FFFACD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textViewSearchLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTextView"
            android:gravity="center_horizontal"
            android:text="@string/textSearch"
            android:textSize="@dimen/textDimensionSearch" />

        <Button
            android:id="@+id/buttonlvl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/butlvl1" />

        <Button
            android:id="@+id/buttonlvl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/butLvl2" />

        <Button
            android:id="@+id/buttonlvl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/butLvl3" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>